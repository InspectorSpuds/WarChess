<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="war.controllers.Entry">
    <children>
        <BorderPane prefHeight="400.0" prefWidth="600.0">
         <center>
            <FlowPane alignment="CENTER" columnHalignment="CENTER" hgap="10.0" orientation="VERTICAL" prefHeight="200.0" prefWidth="200.0" vgap="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnComputer" alignment="CENTER" mnemonicParsing="false" onAction="#playComp" text="Play same computer game" />
                  <Button fx:id="btnOnline" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#playOnline" text="Play online game" />
                  <Button fx:id="btnMultiplayer" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#playMultiplayer" text="Play local multiplayer game" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </FlowPane>
         </center>
         <top>
            <FlowPane alignment="CENTER" columnHalignment="CENTER" orientation="VERTICAL" prefHeight="92.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="War Chess" textAlignment="CENTER">
                     <font>
                        <Font size="34.0" />
                     </font>
                  </Text>
               </children>
            </FlowPane>
         </top></BorderPane>
    </children>
</AnchorPane>
